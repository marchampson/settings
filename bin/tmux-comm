#!/usr/bin/zsh
tmux has-session -t comm
if [ $? != 0 ]; then
    tmux new-session -s comm -n mutt -d
    tmux send-keys -t comm 'vim -c VimwikiMakeDiaryNote' C-m
    tmux split-window -t comm -v -p 70
    tmux send-keys -t comm:1.2 'mutt -f =' C-m
    tmux new-window -t comm -n slrn
    tmux send-keys -t comm:2 'slrn' C-m
    tmux select-window -t comm:1
fi
tmux attach -t comm
